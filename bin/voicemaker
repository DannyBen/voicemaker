#!/usr/bin/env ruby
require 'colsole'
require 'voicemaker'
require 'voicemaker/cli'
include Colsole

runner = Voicemaker::CLI.runner

begin
  exit runner.run ARGV

rescue Interrupt
  say "\nGoodbye"
  exit 1  

rescue => e
  if ENV['DEBUG']
    puts e.backtrace.reverse 
    say ""
  end
  say "!undred!ERROR: #{e.class}"
  say e.message
  exit 1

end
